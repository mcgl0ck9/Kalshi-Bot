# Kalshi Edge Detector Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DISCORD (Required - at least one)
# =============================================================================
# Webhook for sending alerts (get from Discord channel settings)
DISCORD_WEBHOOK_URL=

# Bot token for slash commands (get from Discord Developer Portal)
DISCORD_BOT_TOKEN=

# =============================================================================
# KALSHI API (Optional - for authenticated requests)
# =============================================================================
# Get from Kalshi account settings
KALSHI_API_KEY_ID=
KALSHI_PRIVATE_KEY=
# Or path to private key file
KALSHI_PRIVATE_KEY_PATH=
# Use demo environment
KALSHI_DEMO=false

# =============================================================================
# EXTERNAL APIs (Optional - improves data quality)
# =============================================================================
# NewsAPI - https://newsapi.org/ (free tier: 100 requests/day)
NEWS_API_KEY=

# The Odds API - https://the-odds-api.com/ (free tier: 500 requests/month)
ODDS_API_KEY=

# =============================================================================
# TRADING SETTINGS
# =============================================================================
# Your total bankroll for position sizing
BANKROLL=10000

# Maximum position size as percentage of bankroll (0.25 = 25%)
MAX_POSITION_PCT=0.25

# Minimum edge to flag an opportunity (0.08 = 8%)
MIN_EDGE_THRESHOLD=0.08

# Minimum confidence level
MIN_CONFIDENCE=0.60

# =============================================================================
# SCHEDULE
# =============================================================================
# Timezone for scheduled runs
TIMEZONE=America/New_York

# =============================================================================
# LOGGING
# =============================================================================
# Log level: debug, info, warn, error
LOG_LEVEL=info
